<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#DCDCDC"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/Main_Dishes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/DrinkImages"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/DrinksTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="82dp"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@id/DrinkImages"
                android:fontFamily="@font/midnight1"
                android:text="@string/prep"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/drinksDescription"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_below="@id/DrinksTitle"
                android:layout_toEndOf="@id/DrinkImages"
                android:layout_marginTop="6dp"
                android:layout_marginStart="82dp"
                android:text="@string/prep"
                android:textSize="12sp"
                android:fontFamily="@font/midnight1"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
